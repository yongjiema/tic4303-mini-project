<!DOCTYPE html>
<html>

<head>
  <title>Admin Dashboard</title>
  <link href="/css/tailwind.min.css" rel="stylesheet">
  <script src="/js/app.js"></script>
</head>

<body class="bg-gray-100">
  <div class="flex justify-end space-x-2 pr-2">
    <div class="mt-5">
      <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">Logout</a>
    </div>
  </div>
  <div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded shadow">
    <h2 class="text-3xl font-bold mb-6 text-center">Admin Dashboard</h2>
    <h3 class="text-xl font-semibold mb-3">Registered Users:</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full table-auto border-collapse">
        <thead>
          <tr>
            <th class="px-4 py-2 border text-left">ID</th>
            <th class="px-4 py-2 border text-left">Username</th>
            <th class="px-4 py-2 border text-left">Role</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td class="px-4 py-2 border"><%= user.id %></td>
            <td class="px-4 py-2 border"><%= user.username %></td>
            <td class="px-4 py-2 border"><%= user.role %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="flex justify-end space-x-2 pr-2">
      <div class="mt-5">
        <button type="button" class="go-back bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Back</button>
      </div>
    </div>
  </div>
</body>

</html>
